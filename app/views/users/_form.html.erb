  <% end %>

  <div  class="form-group ml-4">
    <%= form.label :name, style: "display: block"  %>
    <%= form.text_field :name, class: "form-control w-25 p-3" %>

  </div>

  <div  class="form-group ml-4">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class: "form-control w-25 p-3" %>
  </div>

  <div  class="form-group ml-4">
    <%= form.label :birth_date, style: "display: block" %>
    <%= form.date_field :birth_date, class: "form-control w-25 p-3" %>
